using namespace std;

typedef long long ll;
typedef vector<int> vi;
typedef vector< vector <int> > vvi;
typedef pair<int, int> pii;
typedef pair < pair < int, int >, int > piii;
typedef pair < pair <int, int > , pair <int, int> > piiii;

#define FOR(i,a,b) for(int i = a; i < b; i ++)
#define RFOR(i,a,b) for(int i = a-1; i >= b; i --)

#define endl '\n';

#define mp make_pair
#define pb push_back
#define f first
#define s second

const int MOD = 1000000007;
double PI = 4*atan(1);

int main() {
    ios_base::sync_with_stdio(0);cin.tie(0);
    //  ofstream fout("");
    //  ifstream fin("");
   int n; cin >> n;
   while (n!= 0) {
     int sum = 0, ans = 0;
     FOR(i,0,n) {
       int x; cin >> x;
       sum += x;
       sum = max(sum,0);
       ans = max(ans,sum);
     }
     cout << ( ans ? "The maximum winning streak is " + to_string(ans) + "." : "Losing streak." ) << endl;
     cin >> n;
   }
    // fin.close();
    //  fout.close();
}

